<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">

    <!-- Preloader -->
    <div class="preloader flex-column justify-content-center align-items-center">
      <img class="animation__shake" src="img/Fondo3.png" alt="AdminLTELogo" height="400" width="480">
    </div>
    <!-- Contenido Content Wrapper. titulo  -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <!-- SELECT2 EXAMPLE -->
            <div class="card card-default card-info">
              <div class="card-header">
                <h3 class="card-title">ACTUALIZACION DE INFORMACION DEL USUARIO</h3>
              </div>
              <form name="actualizar" action="/edit_usuario" method="POST" enctype="multipart/form-data">
                <!-- /.card-header -->
                {{#if datos }}
                         {{#each datos}}
                <div class="card-body">
                  <!-- Profile Image -->
                  <div class="card-body box-profile">
                    <div class="text-center">
                      <img name="preview" id="preview" class="profile-user-img img-fluid img-circle" src="{{perfil}}"
                        alt="User profile picture">
                    </div>
                  </div>
                  <div class="form-group">
                    <i class="fas fa-image"></i>
                    <label for="exampleInputFile">Imagen</label>
                    <div class="input-group">
                      <div class="custom-file">
                        <input type="file" class="custom-file-input" name="image" id="image" placeholder="Archivo">
                        <label class="custom-file-label" placeholder="Buscar" for="exampleInputFile">Elegir
                          archivo</label>
                      </div>
                    </div>
                  </div>
                  <div class="card-body box-profile">
                  </div>
                  <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <i class="nav-icon fas fa-user"></i>
                      <label for="nombres">Nombre</label>
                      <input type="text" class="form-control" name="nombres" value="{{nombres}}" placeholder="Nombre"
                        autocomplete="off">
                    </div>
                    <div class="form-group">
                      <i class="fas fa-envelope"></i>
                      <label for="nip">NIP</label>
                      <input type="text" class="form-control" name="nip" value="{{nip}}" placeholder="NIP"
                        autocomplete="off">
                    </div>
                    <div class="form-group">
                      <i class="fas fa-envelope"></i>
                      <label for="direccion">Dirección</label>
                      <input type="text" class="form-control" name="direccion" value="{{direccion}}"
                        placeholder="Dirección" autocomplete="off">
                    </div>
                    <div class="form-group">
                      <i class="fas fa-envelope"></i>
                      <label for="email">Email</label>
                      <input type="email" class="form-control" name="correo" value="{{correo}}" placeholder="Email"
                        autocomplete="off">
                    </div>
                    <div class="form-group">
                      <i class="fas fa-tag"></i>
                      <label>Genero</label>
                      <select class="form-control select2" style="width: 100%;" name="genero">
                        <option selected="selected">{{genero}}</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Femenino">Femenino</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <i class="fas fa-unlock-alt"></i>
                      <label for="contraseña">Contraseña</label>
                      <input type="password" class="form-control" name="password" placeholder="Contraseña"
                        autocomplete="off">
                    </div>
                  </div>

                  <div class="col-md-6">

                    <div class="form-group">
                      <i class="nav-icon fas fa-user"></i>
                      <label for="apellidos">Apellidos</label>
                      <input type="text" class="form-control" name="apellidos" value="{{apellidos}}"
                        placeholder="Apellidos" autocomplete="off">
                    </div>
                    <div class="form-group">
                      <i class="fas fa-tag"></i>
                      <label>Grado</label>
                      <select class="form-control select2" style="width: 100%;" name="grado">
                        <option selected="selected">{{grado}}</option>
                        <option value="agente">Agente</option>
                        <option value="comisario">Comisario</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <i class="fas fa-user-lock"></i>
                      <label for="telefono">Telefono</label>
                      <input type="text" class="form-control" name="telefono" value="{{telefono}}"
                        placeholder="Telefono" autocomplete="off">
                    </div>
                    <div class="form-group">
                      <i class="fas fa-tag"></i>
                      <label>Estado Civil</label>
                      <select class="form-control select2" name="estado_civil" style="width: 100%;">
                        <option selected="selected">{{estado_civil}}</option>
                        <option value="casado">Casado</option>
                        <option value="soltero">Soltero</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <i class="fas fa-user-lock"></i>
                      <label for="user">Usuario</label>
                      <input type="text" class="form-control" name="usuario" value="{{usuario}}" placeholder="Usuario"
                        autocomplete="off">
                    </div>

                    <div class="card-footer ">
                      <a onclick="update()" type="submit" class="btn  bg-primary float-center"><i
                          class="nav-icon fas fa-save"></i>
                        &nbsp Actualizar Informacion</a>
                      <a href="/usuarios" type="submit" class="btn  bg-danger float-center"><i
                          class="nav-icon fas fa-arrow-alt-circle-left"></i> &nbsp Cancelar</a>
                    </div>
                  </div>
                </div>
                <input id="cloudinary_id" name="cloudinary_id" value="{{cloudinary_id}}" hidden>
                <input type="hidden" id="old_image" name="old_image" value="{{perfil}}" hidden>

            </div>
            {{/each}}
            {{/if}}
            </form>
          </div>
    </div>
  </div>
  </section>
  </section>
  </div>
  </div>
  <footer class="main-footer">
    <strong>Policía Nacional Civil | Copyright &copy; 2022 </strong>
  </footer>
  <aside class="control-sidebar control-sidebar-dark"></aside>
  </div>
  <script>
    function update() {
      Swal.fire({
        title: 'Desea Guardar los Cambios?',
        icon: 'warning',
        allowOutsideClick: false,
        allowEscapeKey: false,
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Guardar',
        cancelButtonText: 'Cancelar',
      }).then((result) => {
        if (result.isConfirmed) {
          Swal.fire({
            position: 'top-end',
            icon: 'success',
            title: 'Registro Actualizado Correctamente',
            showConfirmButton: false,
            timer: 1500
          }).then((result) => {
            document.actualizar.submit();
          })
        }
      })
    }
  </script>
</body>