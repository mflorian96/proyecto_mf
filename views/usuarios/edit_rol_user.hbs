<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">

    <!-- Preloader -->
    <div class="preloader flex-column justify-content-center align-items-center">
      <img class="animation__shake" src="img/Fondo3.png" alt="AdminLTELogo" height="400" width="480">
    </div>
    <!-- Contenido Content Wrapper. titulo  -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <!-- SELECT2 EXAMPLE -->
            <div class="card card-default card-info">
              <div class="card-header">
                <h3 class="card-title">Editar Rol Del Usuario</h3>
              </div>
              <form name="actualizar" action="/edit_rol_user" method="post">
                <!-- /.card-header -->
                <div class="card-body">
                  {{#each roles}}
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <i class="fas fa-user-tag nav-icon"></i>
                        <label for="nombre_rol"> Nip</label>
                        <input type="text" class="form-control" name="nip" value="{{nip}}" placeholder="Rol"
                          autocomplete="off" required readonly>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <i class="fas fa-info-circle"></i>
                        <label for="descripcion_rol">Nombres</label>
                        <input type="text" class="form-control" name="nombres" value="{{nombres}}"
                          placeholder="Descripción" autocomplete="off" required readonly>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <i class="fas fa-info-circle"></i>
                        <label for="descripcion_rol">Apellidos</label>
                        <input type="text" class="form-control" name="apellidos" value="{{apellidos}}"
                          placeholder="Descripción" autocomplete="off" required readonly>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <i class="fas fa-user-tag"></i>
                        <label>Rol de Usurio</label>
                        <select class="form-control select2" name="tipo_usuario" style="width: 100%;" required>
                          <option selected="selected">{{tipo_usuario}}</option>
                          <option value="administrador">Administrador</option>
                          <option value="armero">Armero</option>
                          <option value="agente">Agente</option>
                        </select>
                      </div>
                    </div>
                        <div class="col-md-6">
                      <div class="form-group">
                        <i class="fas fa-user-tag"></i>
                        <label>Descripcion del Rol</label>
                        <select class="form-control select2" name="descripcion" style="width: 100%;" required>
                          <option selected="selected">{{descripcion}}</option>
                          <option value="ACCESO TOTAL AL SISTEMA">ACCESO TOTAL AL SISTEMA</option>
                          <option value="ACCESO A LA ARMERIA">ACCESO A LA ARMERIA</option>
                        </select>
                      </div>
                    </div>
                    <div class="card-footer ">
                      <a onclick="update()" type="submit" class="btn  bg-primary float-center"><i class="nav-icon fas fa-save"></i>
                        &nbsp
                        Actualizar Rol</a>
                      <a href="/rol_user" type="submit" class="btn  bg-danger float-center"><i
                          class="nav-icon fas fa-arrow-alt-circle-left"></i> &nbsp Cancelar</a>
                    </div>

                  </div>
                  {{/each}}
                </div>
              </form>
            </div>
          </div>
    </div>
    </section>
    </section>
  </div>
  </div>
  <footer class="main-footer">
    <strong>Policía Nacional Civil | Copyright &copy; 2022 </strong>
  </footer>
  <aside class="control-sidebar control-sidebar-dark"></aside>
  </div>
   <script>
    function update(){
      Swal.fire({
  title: 'Desea Guardar los Cambios?',
  icon: 'warning',
  allowOutsideClick: false,
allowEscapeKey: false,
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Guardar',
  cancelButtonText:'Cancelar',
}).then((result) => {
  if (result.isConfirmed) {
   Swal.fire({
  position: 'top-end',
  icon: 'success',
  title: 'Registro Actualizado Correctamente',
  showConfirmButton: false,
  timer: 1500
}).then((result)=>{
document.actualizar.submit();
})
  }
})
    }
  </script>
</body>